        currentStep = 0;
        isStarted = false;
        completedIndicesSet = new Set();

        // 预先生成快速排序的所有动画步骤
        generateQuickSortSteps([...originalArray]);

        renderBars();
        resetCodeHighlight();
        updateStatus('准备就绪');
